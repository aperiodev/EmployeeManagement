<?xml version="1.0" encoding="ISO-8859-1"?>
<decorators defaultdir="/decorators">
    <excludes>
       <pattern>/nodecorate/*</pattern>
        <pattern>/styles/*</pattern>
        <pattern>/assets/*</pattern>
        <pattern>/scripts/*</pattern>
        <pattern>/images/*</pattern>
        <pattern>/index.html</pattern>
        <pattern>/META-INF/*</pattern>
    </excludes>


    <decorator name="fullPage" page="/decorators/fullPageLayout.jsp">
        <pattern>/login</pattern>
        <pattern>/welcome/*</pattern>
        <pattern>/index.jsp</pattern>
    </decorator>

    <decorator name="layout" page="/decorators/main.jsp">
        <pattern>/jsp/error/500Error</pattern>
        <pattern>/jsp/error/404Error</pattern>
        <pattern>/jsp/error/403Error</pattern>
        <pattern>/jsp/views/*</pattern>
        <pattern>/*</pattern>
    </decorator>



    <!--  <decorator name="headerFooterOnly" page="headerFooterLayout.jsp">
        <pattern>/profile/*</pattern>
    </decorator>-->
</decorators>